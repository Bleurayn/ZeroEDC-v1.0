core/digital_twin.py
import pandas as pd
import numpy as np
from datetime import datetime, timedelta
from sklearn.linear_model import LinearRegression

def build_twin(df, patient_id, variable='HbA1c'):
    p = df[df['Patient_ID'] == patient_id].copy()
    p['days'] = (p['Date'] - p['Date'].min()).dt.days
    model = LinearRegression().fit(p[['days']], p[variable])
    future = pd.DataFrame({'days': [90,180,270]})
    pred = model.predict(future[['days']])
    conf = 0.98 if np.std(np.abs(pred - p[variable].mean())) <  < 1 else 0.92
    return {"predictions": pred.tolist(), "confidence": round(conf,4)}

ledger/provenance_ledger.py
import hashlib, time, json
ledger = []

def certify(value, patient_id, variable, source_hash="", twin_conf=0.98):
    rec = { "ts": time.time(), "patient": patient_id, "var": variable, "val": value,
          "src": source_hash, "twin_conf": twin_conf,
          "final_conf": min(1.0, twin_conf + (0.1 if source_hash else 0)),
          "prev": ledger[-1]["hash"] if ledger else "GENESIS"}
    rec["hash"] = hashlib.sha3_256(json.dumps(rec, sort_keys=True).encode()).hexdigest()
    ledger.append(rec)
    return rec["hash"], rec["final_conf"]

agent/autonomous_agent.py
import gradio as gr
import re
from datetime import datetime

def extract(text):
    p = {"HbA1c": r"HbA1c.*?(\d+\.?\d*)", "ALT": r"ALT.*?(\d+\.?\d*)"}
    r = {"time": datetime.now().isoformat()}
    for k,v in p.items():
        m = re.search(v, text, re.I)
        r[k] = float(m.group(1)) if m else None
    r["decision"] = "Auto-certified" if sum(1 for x in r.values() if x) >=  >= 2 else "Flagged"
    return r

gr.Interface(fn=extract, inputs="text", outputs="json", title="ZeroEDC Agent").launch()
